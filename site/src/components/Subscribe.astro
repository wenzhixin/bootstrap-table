---
import { useTranslations } from '@/i18n/utils'

const t = useTranslations(Astro.currentLocale)
---

<link href="//cdn-images.mailchimp.com/embedcode/classic-10_7.css" rel="stylesheet" type="text/css">
<style>
#mc_embed_signup {
  margin: 0 auto;
  text-align: center;
  max-width: 550px;
  width: 100%;
}
#mc-embedded-subscribe {
  margin: 0;
}
</style>

<div id="mc_embed_signup" class="pt-5 pb-5">
  <form action="https://gmail.us20.list-manage.com/subscribe/post?u=f30f83799e58c38ca308f6b73&id=4256ed0bdc" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
    <h3>{t('subscribe.title')}</h3>
    <div class="input-group">
      <input type="email" value="" name="EMAIL" class="form-control email" id="mce-EMAIL" placeholder={t('subscribe.email_placeholder')} required>
      <div class="input-group-append">
        <input type="submit" value={t('subscribe.button')} name="subscribe" id="mc-embedded-subscribe" class="btn btn-outline-secondary">
      </div>
    </div>
  <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
  <div style="position: absolute; left: -5000px;" aria-hidden="true">
    <input type="text" name="b_f30f83799e58c38ca308f6b73_4256ed0bdc" tabindex="-1" value="">
  </div>

  <div id="mce-responses" class="clear">
    <div class="response" id="mce-error-response" style="display:none"></div>
    <div class="response" id="mce-success-response" style="display:none"></div>
  </div>
  </form>
</div>
