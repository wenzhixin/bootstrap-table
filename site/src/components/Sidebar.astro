    ]
  },
  {
    title: 'Extensions',
    pages: [
      { title: 'Addrbar' },
      { title: 'Auto Refresh' },
      { title: 'Cookie' },
      { title: 'Copy Rows' },
      { title: 'Custom View' },
      { title: 'Defer URL' },
