{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaries": [
    "cspell-words"
  ],
  "dictionaryDefinitions": [
    {
      "name": "cspell-words",
      "path": "./.cspell-words.txt",
      "addWords": true
    }
  ],
  "ignoreRegExpList": [
    "/.*data:image/png;base64.*/g",
    "/ * @author.*/g",
    "/ * @update.*/g",
    "/ +\"name\": \".*\",/"
  ],
  "ignorePaths": [
    "src/locale/**",
    "site/node_modules/**",
    "tools/**",
    "DONATORS.md"
  ]
}
